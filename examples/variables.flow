// variables.flow - Variable types and operations

fn main():
    // Type inference
    let name = "Flow"
    let version = 1
    let pi = 3.14159
    let active = true

    print("Language:", name)
    print("Version:", version)
    print("Pi:", pi)
    print("Active:", active)

    // Mutable variable
    mut counter = 0
    counter = counter + 1
    counter = counter + 1
    print("Counter:", counter)

    // String operations
    let greeting = "Hello, " + name + "!"
    print(greeting)
